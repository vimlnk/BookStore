@model UpdateOrderStatusModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Оновлення статусу оплати";
}

<h2>Оновлення статусу замовлення</h2>
<a class="my-2 btn btn-primary" asp-action="AllOrders">Назад</a>

<form style="width: 50%;" asp-action="UpdateOrderStatus" class="pt-2">
    <input type="hidden" asp-for="OrderId" />

    <div class="mb-2">
        <label>Статус замовлення</label>
        <select class="form-control" asp-for="OrderStatusId" asp-items="@Model.OrderStatusList">
            <option value="">Виберіть статус замовлення</option>
        </select>
        <span class="text-danger" asp-validation-for="OrderStatusId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Оновити</button>

    @if (TempData["msg"] != null)
    {
        <div class="text-info my-2">
            @TempData["msg"]
        </div>
    }
</form>


