@model StockDTO
@{
    Layout = "_AdminLayout";
}

<div style="width:50%">
    <h2>Керування запасами</h2>
    <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Назад</a>
    <form asp-action="ManangeStock">
        <input type="hidden" asp-for="BookId" />

        <div class="my-2">
            <label>Кількість</label>
            <input type="number" class="form-control" asp-for="Quantity" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Оновити</button>
        </div>
    </form>
</div>
