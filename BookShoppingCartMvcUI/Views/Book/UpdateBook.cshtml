@model BookDTO
@{
    Layout = "_AdminLayout";
}
<div style="width:50%">
    <h2>Оновити книгу</h2>
    <a asp-action="Index" asp-controller="Book" class="btn btn-primary">Назад</a>
    <form asp-action="UpdateBook" enctype="multipart/form-data"> <!-- Один тег форми -->
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />

        <div class="my-2">
            <label>Назва Книги*</label>
            <input type="text" class="form-control" asp-for="BookName" />
            <span asp-validation-for="BookName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Автор*</label>
            <input type="text" class="form-control" asp-for="AuthorName" />
            <span asp-validation-for="AuthorName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Жанр книги*</label>
            <select class="form-control" asp-for="GenreId" asp-items="Model.GenreList">
                <option value="">Select Genre</option>
            </select>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Ціна*</label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Зображення</label>
            @if(!string.IsNullOrEmpty(Model.Image))
            {
                <img src="/images/@Model.Image" style="width:100px;height:80px"/>
            }
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>

        <div class="my-2">
            <label for="Annotation">Анотація</label>
            <textarea asp-for="Annotation" class="form-control"></textarea>
            <span asp-validation-for="Annotation" class="text-danger"></span>
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Оновити</button>
        </div>
    </form> <!-- Кінець тегу form -->
</div>


